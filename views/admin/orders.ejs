<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eon Forge - Order Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#4361ee',
            'primary-dark': '#3a56d4',
            secondary: '#3b82f6',
            accent: '#10b981',
            warning: '#f59e0b',
            danger: '#ef4444',
          },
          animation: {
            'fade-in': 'fadeIn 0.3s ease-out',
            'slide-up': 'slideUp 0.3s ease-out',
          },
          keyframes: {
            fadeIn: {
              '0%': { opacity: '0', transform: 'translateY(10px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' },
            },
            slideUp: {
              '0%': { opacity: '0', transform: 'translateY(20px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' },
            },
          },
        },
      },
    }
  </script>
  <style>
    .account-dropdown {
      display: none;
    }
    .account-wrapper:hover .account-dropdown {
      display: block;
    }
    
    .table-row:hover { 
      background: linear-gradient(to right, rgba(243, 244, 246, 0.8), rgba(249, 250, 251, 0.8));
    }
    .stats-card {
      transition: transform 0.2s ease;
    }
    .stats-card:hover {
      transform: translateY(-4px);
    }
    .sidebar-menu a.active {
      background-color: rgba(255, 255, 255, 0.1);
    }
    .search-container {
      transition: all 0.3s ease;
    }
    .search-container:focus-within {
      box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
    }
    
    /* Mobile sidebar styles */
    .sidebar-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 40;
      display: none;
    }
    
    .sidebar-overlay.active {
      display: block;
    }
    
    /* Responsive table styles */
    @media (max-width: 768px) {
      .responsive-table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }
    }
  </style>
</head>
<body class="font-sans bg-gray-100 text-gray-900">
  <!-- Mobile Sidebar Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>
  <div class="flex min-h-screen">
   <%- include("../../views/partials/admin/sidebar") %>

    <div class="flex-1 lg:ml-64 min-h-screen w-full">
      <!-- Header -->
      <header class="bg-white py-4 px-4 lg:px-6 flex items-center shadow sticky top-0 z-40">
        <button class="lg:hidden mr-4 text-gray-700" id="openSidebar">
          <i class="fas fa-bars text-xl"></i>
        </button>
        
        <form action="/admin/orders" method="get" class="search-container flex items-center bg-gray-100 rounded-full px-4 py-2 w-full max-w-md ml-0 lg:ml-4">
          <input type="text" name="search" placeholder="Search orders..." 
                 class="bg-transparent border-none focus:outline-none text-sm w-full" 
                 value="<%= typeof search !== 'undefined' ? search : '' %>">
          <button type="submit" class="text-gray-500 hover:text-primary">
            <i class="fas fa-search"></i>
          </button>
          <% if(search) { %>
            <a href="/admin/orders" class="ml-2 text-gray-500 hover:text-danger">
              <i class="fas fa-times"></i>
            </a>
          <% } %>
        </form>
        
        <div class="account-wrapper relative ml-auto">
          <button class="icon-btn text-xl text-gray-700" title="Account">
            <i class="fas fa-user"></i>
          </button>
          <div class="account-dropdown absolute right-0 top-full bg-white min-w-40 shadow-lg rounded-md overflow-hidden">
            <a href="/profile" class="block px-4 py-2 text-gray-700 no-underline hover:bg-gray-100">
              <i class="fas fa-user mr-2"></i> Profile
            </a>
            <a href="/admin/logout" class="block px-4 py-2 text-gray-700 no-underline hover:bg-gray-100">
              <i class="fas fa-sign-out-alt mr-2"></i> Logout
            </a>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <main class="p-4 lg:p-6">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 mb-6 lg:mb-8">
          <div class="stats-card bg-white rounded-xl p-4 lg:p-6 shadow-lg animate-slide-up">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Total Orders</p>
                <h3 class="text-xl lg:text-2xl font-bold text-primary"><%= totalOrders || 0 %></h3>
              </div>
              <div class="bg-primary/10 p-2 lg:p-3 rounded-full">
                <i class="fas fa-shopping-cart text-primary text-lg lg:text-xl"></i>
              </div>
            </div>
          </div>
          <div class="stats-card bg-white rounded-xl p-4 lg:p-6 shadow-lg animate-slide-up">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Pending Orders</p>
                <h3 class="text-xl lg:text-2xl font-bold text-warning"><%= pendingOrders || 0 %></h3>
              </div>
              <div class="bg-warning/10 p-2 lg:p-3 rounded-full">
                <i class="fas fa-hourglass-half text-warning text-lg lg:text-xl"></i>
              </div>
            </div>
          </div>
          <div class="stats-card bg-white rounded-xl p-4 lg:p-6 shadow-lg animate-slide-up">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Return Requests</p>
                <h3 class="text-xl lg:text-2xl font-bold text-danger"><%= returnRequests || 0 %></h3>
              </div>
              <div class="bg-danger/10 p-2 lg:p-3 rounded-full">
                <i class="fas fa-undo text-danger text-lg lg:text-xl"></i>
              </div>
            </div>
          </div>
          <div class="stats-card bg-white rounded-xl p-4 lg:p-6 shadow-lg animate-slide-up">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Total Revenue</p>
                <h3 class="text-xl lg:text-2xl font-bold text-accent">₹<%= totalRevenue ? totalRevenue.toFixed(2) : '0.00' %></h3>
              </div>
              <div class="bg-accent/10 p-2 lg:p-3 rounded-full">
                <i class="fas fa-indian-rupee-sign text-accent text-lg lg:text-xl"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Filters and Header -->
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-6 gap-4">
          <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-gray-800">Order Management</h1>
            <p class="text-gray-600 text-sm">Track and manage customer orders</p>
          </div>
          <div class="flex flex-col sm:flex-row gap-3 w-full lg:w-auto">
            <select id="status-filter" name="status" class="px-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary w-full sm:w-auto">
              <option value="">All Statuses</option>
              <option value="Pending">Pending</option>
              <option value="Processing">Processing</option>
              <option value="Shipped">Shipped</option>
              <option value="Delivered">Delivered</option>
              <option value="Cancelled">Cancelled</option>
              <option value="Return Request">Return Request</option>
              <option value="Returned">Returned</option>
              <option value="Rejected">Rejected</option>
            </select>
            <select id="sort-order" name="sort" class="px-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary w-full sm:w-auto">
              <option value="desc">Newest First</option>
              <option value="asc">Oldest First</option>
            </select>
          </div>
        </div>

        <!-- Orders Table -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="overflow-x-auto responsive-table">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">No.</th>
                  <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Order ID</th>
                  <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase hidden md:table-cell">Customer</th>
                  <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase hidden sm:table-cell">Date</th>
                  <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Total</th>
                  <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Status</th>
                  <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% orders.forEach((order, index) => { %>
                  <tr class="table-row border-t border-gray-100">
                    <td class="px-4 lg:px-6 py-3 text-sm"><%= (currentPage - 1) * limit + index + 1 %></td>
                    <td class="px-4 lg:px-6 py-3 text-sm font-medium text-gray-900">#ORD-<%= order.orderId.slice(1,8)%></td>
                    <td class="px-4 lg:px-6 py-3 hidden md:table-cell">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= order.userId?.firstName || 'N/A' %>  %>
                      </span>
                    </td>
                    <td class="px-4 lg:px-6 py-3 text-sm text-gray-700 hidden sm:table-cell">
                      <%= new Date(order.createdOn).toLocaleDateString() %>
                    </td>
                    <td class="px-4 lg:px-6 py-3 text-sm font-semibold text-gray-900">₹<%= order.totalPrice.toFixed(2) %></td>
                    <td class="px-4 lg:px-6 py-3">
                      <%
                        const statusStyles = {
                          'Pending': 'bg-yellow-100 text-yellow-800',
                          'Processing': 'bg-blue-100 text-blue-800',
                          'Shipped': 'bg-purple-100 text-purple-800',
                          'Delivered': 'bg-green-100 text-green-800',
                          'Cancelled': 'bg-red-100 text-red-800',
                          'Return Request': 'bg-orange-100 text-orange-800',
                          'Returned': 'bg-gray-100 text-gray-800',
                          'Rejected': 'bg-red-200 text-red-900' 
                        };
                        const statusIcons = {
                          'Pending': 'fa-hourglass-start',
                          'Processing': 'fa-cog',
                          'Shipped': 'fa-truck',
                          'Delivered': 'fa-check-circle',
                          'Cancelled': 'fa-times-circle',
                          'Return Request': 'fa-undo',
                          'Returned': 'fa-exchange-alt',
                          'Rejected': 'fa-ban' 
                        };

                        const finalStatus = order.status;
                      %>

                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= statusStyles[finalStatus] %>">
                        <i class="fas <%= statusIcons[finalStatus] %> mr-1"></i>
                        <span class="hidden sm:inline"><%= finalStatus %></span>
                        <span class="sm:hidden"><%= finalStatus.substring(0, 3) %></span>
                      </span>
                    </td>
                    <td class="px-4 lg:px-6 py-3">
                      <div class="flex flex-col sm:flex-row sm:gap-2 gap-1">
                        <a href="/admin/orders/<%= order._id %>" 
                           class="text-primary hover:text-primary-dark text-sm font-medium px-2 py-1 rounded-lg hover:bg-primary/10 text-left">
                          <i class="fas fa-eye mr-1"></i><span class="hidden sm:inline">View</span>
                        </a>

                        <% if (finalStatus !== 'Delivered' && finalStatus !== 'Cancelled' && finalStatus !== 'Rejected' && finalStatus !== 'Returned' ) { %>
                          <button onclick="openStatusModal('<%= order._id %>', '<%= finalStatus %>')" 
                                  class="text-accent hover:text-accent-dark text-sm font-medium px-2 py-1 rounded-lg hover:bg-accent/10 text-left">
                            <i class="fas fa-edit mr-1"></i><span class="hidden sm:inline">Status</span>
                          </button>
                        <% } %>

                        <% if (order.status === 'Return Request') { %>
                          <button onclick="verifyReturn('<%= order.orderId %>',`<%= order.returnReason %>`)" 
                                  class="text-warning hover:text-warning-dark text-sm font-medium px-2 py-1 rounded-lg hover:bg-warning/10 text-left">
                            <i class="fas fa-check-double mr-1"></i><span class="hidden sm:inline">Verify</span>
                          </button>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <!-- Pagination -->
          <div class="flex items-center justify-center gap-2 p-4 bg-gray-50 border-t border-gray-200">
            <a href="?page=<%= currentPage - 1 %>&search=<%= search || '' %>&status=<%= status || '' %>&sort=<%= sort || 'desc' %>" 
               class="flex items-center justify-center w-8 h-8 lg:w-10 lg:h-10 rounded-lg border border-gray-200 hover:bg-primary hover:text-white <%= currentPage === 1 ? 'opacity-50 pointer-events-none' : '' %>">
              <i class="fas fa-chevron-left text-xs lg:text-sm"></i>
            </a>
            <% for(let i = 1; i <= totalPages; i++) { %>
              <a href="?page=<%= i %>&search=<%= search || '' %>&status=<%= status || '' %>&sort=<%= sort || 'desc' %>" 
                 class="flex items-center justify-center w-8 h-8 lg:w-10 lg:h-10 rounded-lg border border-gray-200 text-xs lg:text-sm <%= i === currentPage ? 'bg-primary text-white' : 'hover:bg-gray-100' %>">
                <%= i %>
              </a>
            <% } %>
            <a href="?page=<%= currentPage + 1 %>&search=<%= search || '' %>&status=<%= status || '' %>&sort=<%= sort || 'desc' %>" 
               class="flex items-center justify-center w-8 h-8 lg:w-10 lg:h-10 rounded-lg border border-gray-200 hover:bg-primary hover:text-white <%= currentPage >= totalPages ? 'opacity-50 pointer-events-none' : '' %>">
              <i class="fas fa-chevron-right text-xs lg:text-sm"></i>
            </a>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Status Modal -->
  <div id="status-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-md animate-fade-in">
      <div class="p-4 border-b border-gray-200 bg-gradient-to-r from-primary to-secondary text-white flex justify-between items-center">
        <h2 class="text-lg font-semibold">Update Order Status</h2>
        <button id="close-status-modal" class="text-white hover:text-gray-200">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form id="status-form" class="p-6">
        <input type="hidden" id="order-id" name="orderId">
        <div class="mb-4">
          <label for="new-status" class="block text-sm font-medium text-gray-700 mb-2">New Status</label>
          <select id="new-status" name="status" class="w-full px-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary">
            <option value="Pending">Pending</option>
            <option value="Processing">Processing</option>
            <option value="Shipped">Shipped</option>
            <option value="Delivered">Delivered</option>
            <option value="Cancelled">Cancelled</option>
          </select>
        </div>
        <div class="flex justify-end gap-3">
          <button type="button" id="cancel-status-btn" class="px-4 py-2 border border-gray-200 rounded-lg text-gray-700 hover:bg-gray-50 text-sm">
            Cancel
          </button>
          <button type="submit" class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark text-sm">
            Update
          </button>
        </div>
      </form>
    </div>
  </div>

  <script src="/assets/js/admin/orders.js"></script>
</body>
</html>