<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password | Timepiece</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
      height: 100vh;
      overflow: hidden;
      position: relative;
    }
    .background-image {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("https://images.unsplash.com/photo-1619134778706-7015533a6150?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      z-index: -1;
    }
    .glass-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    .watch-icon {
      filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.7));
    }
    .password-strength {
      height: 4px;
      transition: all 0.3s ease;
    }
  </style>
</head>
<body>
  <!-- Full-screen background image -->
  <div class="background-image"></div>
  
  <!-- Main container -->
  <div class="min-h-screen flex items-center justify-center p-4">
    <!-- Glass card -->
    <div class="glass-card w-full max-w-md rounded-2xl shadow-xl overflow-hidden transition-transform hover:-translate-y-1">
      <!-- Accent bar -->
      <div class="h-2 bg-gradient-to-r from-amber-400 to-rose-600"></div>
      
      <!-- Content -->
      <div class="p-8">
        <!-- Watch logo -->
        <div class="flex justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="watch-icon h-14 w-14 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <circle cx="12" cy="12" r="7" stroke-width="1.5"></circle>
            <polyline points="12 9 12 12 13.5 13.5" stroke-width="1.5"></polyline>
            <path d="M16.51 17.35l-.35 3.83a2 2 0 0 1-2 1.82H9.83a2 2 0 0 1-2-1.82l-.35-3.83m.01-10.7l.35-3.83A2 2 0 0 1 9.83 1h4.35a2 2 0 0 1 2 1.82l.35 3.83" stroke-width="1.5"></path>
          </svg>
        </div>
        
        <h1 class="text-2xl font-semibold text-white text-center mb-2">Reset Your Password</h1>
        <p class="text-white/80 text-center mb-8">Create a new secure password</p>
             <!-- message box -->
        <p id="messageBox" class="text-center text-sm font-medium mb-4 hidden"></p>

        <!-- Password reset form -->
        <form id="resetForm" class="space-y-6">
          <div>
            <label class="block text-white/90 text-sm mb-2">New Password</label>
            <div class="relative">
              <input
                type="password"
                id="newPassword"
                name="newPassword"
                required
                class="w-full bg-white/10 text-white placeholder-white/50 px-4 py-3 border border-white/30 rounded-lg focus:outline-none focus:ring-1 focus:ring-white"
               
              >
              <div class="flex mt-2 gap-1">
                <div id="strength-1" class="password-strength flex-1 bg-gray-500/50 rounded-full"></div>
                <div id="strength-2" class="password-strength flex-1 bg-gray-500/50 rounded-full"></div>
                <div id="strength-3" class="password-strength flex-1 bg-gray-500/50 rounded-full"></div>
                <div id="strength-4" class="password-strength flex-1 bg-gray-500/50 rounded-full"></div>
              </div>
              <p id="password-help" class="text-xs text-white/60 mt-1"></p>
            </div>
          </div>

          <div>
            <label class="block text-white/90 text-sm mb-2">Confirm Password</label>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              required
              class="w-full bg-white/10 text-white placeholder-white/50 px-4 py-3 border border-white/30 rounded-lg focus:outline-none focus:ring-1 focus:ring-white"
            >
            <p id="password-match" class="text-xs text-red-300 mt-1 hidden">Passwords don't match!</p>
          </div>

          <button
            type="submit"
            class="w-full py-3 bg-gradient-to-r from-gray-300 to-gray-400 text-gray-800 font-medium rounded-lg hover:from-gray-200 hover:to-gray-300 transition-all"
          >
            Update Password
          </button>
        </form>

        <div class="mt-6 text-center">
          <a href="/login" class="text-white/80 hover:text-white text-sm inline-flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Login
          </a>
        </div>
      </div>
    </div>
  </div>

  <script src="/assets/js/user/reset-password.js"></script>
</body>
</html>