                        },
                        { 
                            id: 3,
                            brand: "LONGINES", 
                            name: "LONGINES L3.320.4.07.6 CONQUEST AUTOMATIC WATCH FOR WOMEN", 
                            price: "249,000.00",
                            image: "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%20%28186%29-zt5FhBMydOHNzfGuFyGnxb3OiG1BGL.png"
                        },
                        { 
                            id: 4,
                            brand: "LONGINES", 
                            name: "LONGINES L4.918.4.94.6 LA GRANDE CLASSIQUE AUTOMATIC ANALOG WATCH FOR MEN", 
                            price: "178,000.00",
                            image: "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%20%28186%29-zt5FhBMydOHNzfGuFyGnxb3OiG1BGL.png"
                        }
                    ]; %> -->
                    
                    <% products.forEach(watch => { %>
                        <div class="product-card">
                            <div class="product-image">
                                <img src="<%= watch.colorVariants[0].productImage[0] %>" alt="<%= watch.productName %>">
                                <div class="product-actions">
                                    <button class="btn-wishlist" data-product-id="<%= watch._id %>">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="btn-add-to-cart" data-product-id="<%= watch._id %>">
                                        <i class="fas fa-shopping-bag"></i>
                                        <span>Add to Cart</span>
                                    </button>
                                    <button class="btn-quick-view" data-product-id="<%= watch._id %>">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="product-info">
                                <h4 class="product-brand"><%= watch.brand %></h4>
                                <h3 class="product-name"><%= watch.name %></h3>
                                <p class="product-price">₹ <%= watch.price %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
                
                <div class="discover-btn-container">
                    <a href="/brands/longines" class="discover-btn">Discover Longines</a>
                </div>
            </div>
        </section>

        <!-- New Arrivals Section -->
        <section class="new-arrivals-section">
            <div class="container">
                <div class="section-header">
                    <h2>NEW ARRIVALS</h2>
                    <p>The latest additions to our collection</p>
                </div>
                
                <div class="product-grid">                  
                    
                    <% products.forEach(watch => { %>
                        <div class="product-card">
                            <div class="product-image ">
                                <img src="<%= watch.colorVariants[0].productImage[0] %>" alt="<%= watch.productName %>">
                           
                                <div class="product-actions">
                                    <button class="btn-wishlist" data-product-id="<%= watch._id %>.png">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="btn-add-to-cart" data-product-id="<%= watch._id %>">
                                        <i class="fas fa-shopping-bag"></i>
                                        <span>Add to Cart</span>
                                    </button>
                                    <button class="btn-quick-view" data-product-id="<%= watch._id %>">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="product-info">
                                <h4 class="product-brand"><%= watch.brand %></h4>
                                <h3 class="product-name"><%= watch.productName %></h3>
                                <p class="product-price">₹ <%= watch.price %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Shop By Budget Section -->
        <section class="shop-by-budget">
            <div class="container">
                <h2 class="section-title">SHOP BY BUDGET</h2>
                <div class="budget-options">
                    <a href="/price/upto-20000" class="budget-btn">UPTO ₹20,000</a>
                    <a href="/price/upto-40000" class="budget-btn">UPTO ₹40,000</a>
                    <a href="/price/upto-60000" class="budget-btn">UPTO ₹60,000</a>
                    <a href="/price/above-60000" class="budget-btn">ABOVE ₹60,000</a>
                </div>
                <div class="discover-all-container">
                    <a href="/offers" class="discover-all-btn">DISCOVER ALL OFFERS</a>
                </div>
            </div>
        </section>

        <!-- Pagination -->
        <div class="pagination-container">
            <div class="container">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>SUPPORT</h3>
                    <ul class="footer-links">
                        <li><a href="/about-us">About us</a></li>
                        <li><a href="/faqs">FAQs</a></li>
                        <li><a href="/privacy-policy">Privacy Policy</a></li>
                        <li><a href="/shipping-policy">Shipping Policy</a></li>
                        <li><a href="/terms-of-service">Terms of Service</a></li>
                        <li><a href="/cancellation-refunds">Cancellation & Refunds</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>COMPANY</h3>
                    <ul class="footer-links">
                        <li><a href="/todays-deals">Today's Deals</a></li>
                        <li><a href="/repair-service">Repair & Service</a></li>
                        <li><a href="/our-stores">Our Stores</a></li>
                        <li><a href="/ask-to-experts">Ask to Experts</a></li>
                        <li><a href="/affiliate">Affiliate</a></li>
                    </ul>
                </div>
                <div class="footer-column newsletter">
                    <h3>SUBSCRIBE NEWSLETTERS</h3>
                    <p>Subscribe to get special offers, free giveaways, and once-in-a-lifetime deals.</p>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Enter your email" required>
                        <button type="submit"><i class="fas fa-paper-plane"></i></button>
                    </form>
                    <div class="social-icons">
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-pinterest-p"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; <%= new Date().getFullYear() %> Eon Forge. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/assets/js/user/home.js"></script>
</body>
</html>



