<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eon Forge - Luxury Watches</title>
    <link rel="stylesheet" href="/assets/css/user/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Top Banner -->
    <div class="top-banner">
        <p>BEST PRICE <span>Guaranteed on all Products</span></p>
    </div>

    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a href="/">
                        <h1>EON FORGE</h1>
                    </a>
                </div>
                <div class="search-container">
                    <div class="search-box">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" placeholder="Search analog slim" class="search-input">
                        <button class="search-clear-btn">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                
                <div class="header-actions">
                    <div class="account-wrapper">
                      <% if (isLoggedIn || user) { %>
                        <div class="icon-btn account-toggle" title="Account">
                          <i class="fas fa-user"></i>
                          <span class="icon-text">Account</span>
                        </div>
                        <div class="account-dropdown">
                          <a href="/profile"><i class="fas fa-user"></i><%= user.firstName%>'s Profile</a>
                          <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                      <% } else { %>
                        <a href="/login" class="icon-btn" title="Login">
                          <i class="fas fa-user"></i>
                          <span class="icon-text">Account</span>
                        </a>
                      <% } %>
                    </div>
                    
                    <a href="/wishlist" class="icon-btn" title="Wishlist">
                        <i class="fas fa-heart"></i>
                        <span class="icon-text">Wishlist</span>
                    </a>
                    <a href="/cart" class="icon-btn" title="Cart">
                        <i class="fas fa-shopping-bag"></i>
                        <span class="icon-text">Cart</span>
                    </a>
                </div>
                <div class="mobile-menu-btn">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="main-nav">
        <div class="container">
            <ul class="nav-list">
                <li><a href="/sale">HOME</a></li>
                <li class="dropdown">
                    <a href="/brands">SHOP</a>
                    <!-- <div class="dropdown-content">
                        <div class="dropdown-grid">
                            <% const brands = ["RADO", "LONGINES", "TISSOT", "MONTBLANC", "MOVADO", "VERSACE", "ROAMER", "BALMAIN", "VICTORINOX", "CALVIN KLEIN", "ALBA", "ARMANI EXCHANGE", "CASIO", "CERRUTI", "CITIZEN", "COACH"]; %>
                            <% brands.forEach(brand => { %>
                                <a href="/brands/<%= brand.toLowerCase() %>"><%= brand %></a>
                            <% }); %>
                        </div>
                    </div> -->
                </li>
                <li><a href="/exclusive">ABOUT</a></li>
                <li class="dropdown">
                    <a href="/watch-finder">CONTACT</a>
                    <!-- <div class="dropdown-content">
                        <div class="dropdown-grid">
                            <a href="/watches/men">Men's Watches</a>
                            <a href="/watches/women">Women's Watches</a>
                            <a href="/watches/couples">Couple Watches</a>
                            <a href="/watches/smart">Smart Watches</a>
                        </div>
                    </div> -->
                </li>
                <li><a href="/repair-service">Repair & Service</a></li>
                <li><a href="/stores">Stores</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <!-- Hero Carousel -->
        <section class="hero-carousel">
            <div class="carousel-container">
                <div class="carousel-track">
                    <div class="carousel-slide active">
                        <div class="slide-content" style="background-color: #787c6e;">
                            <div class="slide-text">
                                <h2>EON FORGE SMART</h2>
                                <div class="offer-text">
                                    <h3>Upto</h3>
                                    <h1>60%</h1>
                                    <h3>Off</h3>
                                </div>
                                <p>on smartwatches</p>
                                <a href="/smartwatches" class="btn-shop-now">SHOP NOW</a>
                            </div>
                            <div class="slide-image">
                                <img src="//watchfactory.in/cdn/shop/files/gempages_457431224189715652-38099a64-53ad-4851-9228-6a4f97af81dd.png?v=14947828402043053938" alt="Smart Watches" class="hero-img">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-slide">
                        <div class="slide-content" style="background-color: #0a2240;">
                            <div class="slide-text">
                                <h2>LUXURY COLLECTION</h2>
                                <div class="offer-text">
                                    <h3>New</h3>
                                    <h1>2025</h1>
                                    <h3>Arrivals</h3>
                                </div>
                                <p>exclusive timepieces</p>
                                <a href="/luxury" class="btn-shop-now">DISCOVER</a>
                            </div>
                            <div class="slide-image">
                                <img src="//watchfactory.in/cdn/shop/files/gempages_457431224189715652-eae7b89d-7a33-4243-8ff0-9777f4e4fb9d.png?v=17046506277600371054" alt="Luxury Watches" class="hero-img">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-slide">
                        <div class="slide-content" style="background-color: #2c3e36;">
                            <div class="slide-text">
                                <h2>CLASSIC ELEGANCE</h2>
                                <div class="offer-text">
                                    <h3>Limited</h3>
                                    <h1>Edition</h1>
                                    <h3>Pieces</h3>
                                </div>
                                <p>timeless craftsmanship</p>
                                <a href="/classic" class="btn-shop-now">EXPLORE</a>
                            </div>
                            <div class="slide-image">
                                <img src="//watchfactory.in/cdn/shop/files/gempages_457431224189715652-e1676075-74fc-421b-ba9d-af8b58d491c0.png?v=16099333816327626148" alt="Classic Watches" class="hero-img">
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-btn prev-btn"><i class="fas fa-chevron-left"></i></button>
                <button class="carousel-btn next-btn"><i class="fas fa-chevron-right"></i></button>
                <div class="carousel-dots">
                    <span class="dot active" data-index="0"></span>
                    <span class="dot" data-index="1"></span>
                    <span class="dot" data-index="2"></span>
                </div>
            </div>
        </section>

        <!-- Brands Section -->
        <section class="brands-section">
            <div class="container">
                <div class="section-header">
                    <h2>CHOOSE FROM LARGE COLLECTION OF RECOGNIZED BRANDS</h2>
                    <p>A SINGLE, RELIABLE DESTINATION FOR YOUR PREFERRED WATCH</p>
                </div>
                
                <div class="brands-category">
                    <div class="category-header">
                        <h3>SWISS MADE</h3>
                        <a href="/swiss-watches" class="view-all">View all swiss watches <i class="fas fa-arrow-right"></i></a>
                    </div>
                    <div class="brands-grid">
                        <a href="/brands/rado" class="brand-card">
                            <img src="/images/brands/rado.png" alt="RADO" class="brand-logo">
                        </a>
                        <a href="/brands/longines" class="brand-card">
                            <img src="/images/brands/longines.png" alt="LONGINES" class="brand-logo">
                        </a>
                        <a href="/brands/tissot" class="brand-card">
                            <img src="/images/brands/tissot.png" alt="TISSOT" class="brand-logo">
                        </a>
                        <a href="/brands/montblanc" class="brand-card">
                            <img src="/images/brands/montblanc.png" alt="MONTBLANC" class="brand-logo">
                        </a>
                        <a href="/brands/movado" class="brand-card">
                            <img src="/images/brands/movado.png" alt="MOVADO" class="brand-logo">
                        </a>
                        <a href="/brands/versace" class="brand-card">
                            <img src="/images/brands/versace.png" alt="VERSACE" class="brand-logo">
                        </a>
                        <a href="/brands/roamer" class="brand-card">
                            <img src="/images/brands/roamer.png" alt="ROAMER" class="brand-logo">
                        </a>
                        <a href="/brands/balmain" class="brand-card">
                            <img src="/images/brands/balmain.png" alt="BALMAIN" class="brand-logo">
                        </a>
                        <a href="/brands/victorinox" class="brand-card">
                            <img src="/images/brands/victorinox.png" alt="VICTORINOX" class="brand-logo">
                        </a>
                        <a href="/brands/calvinklein" class="brand-card">
                            <img src="/images/brands/calvinklein.png" alt="CALVIN KLEIN" class="brand-logo">
                        </a>
                    </div>
                </div>
                
                <div class="brands-category">
                    <div class="category-header">
                        <h3>POPULAR BRANDS</h3>
                        <a href="/popular-brands" class="view-all">View all brand watches <i class="fas fa-arrow-right"></i></a>
                    </div>
                    <div class="brands-grid">
                        <a href="/brands/alba" class="brand-card">
                            <img src="/images/brands/alba.png" alt="ALBA" class="brand-logo">
                        </a>
                        <a href="/brands/armaniexchange" class="brand-card">
                            <img src="/images/brands/armaniexchange.png" alt="ARMANI EXCHANGE" class="brand-logo">
                        </a>
                        <a href="/brands/casio" class="brand-card">
                            <img src="/images/brands/casio.png" alt="CASIO" class="brand-logo">
                        </a>
                        <a href="/brands/cerruti" class="brand-card">
                            <img src="/images/brands/cerruti.png" alt="CERRUTI" class="brand-logo">
                        </a>
                        <a href="/brands/citizen" class="brand-card">
                            <img src="/images/brands/citizen.png" alt="CITIZEN" class="brand-logo">
                        </a>
                        <a href="/brands/coach" class="brand-card">
                            <img src="/images/brands/coach.png" alt="COACH" class="brand-logo">
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Gender Shop Section -->
        <section class="gender-shop-section">
            <div class="container">
                <h2 class="section-title">MADE FOR GETTING WRAPPED UP IN THE MOMENT</h2>
                <div class="gender-shop-grid">
                    <div class="gender-card">
                        <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%20%28185%29-G5lon2UsRxdygQl7ptR9yZlBPrmvnA.png" alt="Shop for Her" class="gender-img">
                        <a href="/watches/women" class="gender-btn">SHOP FOR HER</a>
                    </div>
                    <div class="gender-card">
                        <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%20%28185%29-G5lon2UsRxdygQl7ptR9yZlBPrmvnA.png" alt="Shop for Him" class="gender-img">
                        <a href="/watches/men" class="gender-btn">SHOP FOR HIM</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Featured Products Section -->
        <section class="featured-products-section">
            <div class="container">
                <div class="section-header">
                    <h2>FEATURED COLLECTIONS</h2>
                    <p>Discover our most popular timepieces</p>
                </div>
                
                <div class="product-grid">
                    <!-- <% const featuredWatches = [
                        { 
                            id: 1,
                            brand: "LONGINES", 
                            name: "LONGINES L5.258.4.71.0 DOLCEVITA ANALOG WATCH FOR WOMEN", 
                            price: "139,000.00",
                            image: "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%20%28186%29-zt5FhBMydOHNzfGuFyGnxb3OiG1BGL.png"
                        },
                        { 
                            id: 2,
