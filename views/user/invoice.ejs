<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eon Forge - Invoice</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif'],
                        'playfair': ['Playfair Display', 'serif'],
                    },
                    colors: {
                        'primary': '#1a1a1a',
                        'accent': '#d4af37',
                        'accent-light': '#f4e4a6',
                        'cream': '#fefdfb',
                        'warm-gray': '#f8f7f4',
                        'text-primary': '#2d2d2d',
                        'text-secondary': '#6b7280',
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.3s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            from: { opacity: '0', transform: 'translateY(20px)' },
                            to: { opacity: '1', transform: 'translateY(0)' },
                        },
                        slideUp: {
                            from: { transform: 'translateY(10px)', opacity: '0' },
                            to: { transform: 'translateY(0)', opacity: '1' },
                        },
                    },
                },
            },
        };
    </script>

    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #fefdfb 0%, #f8f7f4 100%);
        }

        .glass-effect {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .premium-shadow {
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        }

        .btn-primary {
            background: linear-gradient(135deg, #d4af37 0%, #f4e4a6 100%);
            color: #1a1a1a;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(212, 175, 55, 0.4);
        }

        .btn-secondary {
            background: #f8fafc;
            color: #64748b;
            border: 2px solid #e2e8f0;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-secondary:hover {
            background: #f1f5f9;
            border-color: #cbd5e1;
            transform: translateY(-2px);
        }

        .invoice-table {
            width: 100%;
            border-collapse: collapse;
        }

        .invoice-table th,
        .invoice-table td {
            padding: 0.75rem;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        .invoice-table th {
            font-weight: 600;
            color: #2d2d2d;
        }

        .invoice-table td {
            color: #6b7280;
        }

        .invoice-wrapper {
            page-break-inside: avoid;
            break-inside: avoid;
        }

        .invoice-table,
        .invoice-table tr,
        .invoice-table td,
        .invoice-table th {
            page-break-inside: avoid;
            break-inside: avoid;
        }

        @media print {
            .no-print {
                display: none !important;
                visibility: hidden !important;
            }
        }

        .gradient-bg {
            background: #ffffff;
        }

        .glass-effect {
            background: #ffffff;
            border: none;
            box-shadow: none;
        }

        .premium-shadow {
            box-shadow: none;
        }
        
    </style>
</head>

<body class="gradient-bg font-inter min-h-screen">
    <!-- Breadcrumb -->
    <nav class="bg-white/70 px-4 py-4 border-b border-gray-100 no-print">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center space-x-3 text-sm">
                <a href="/"
                    class="text-text-secondary hover:text-accent transition-colors font-medium flex items-center space-x-1">
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                </a>
                <i class="fas fa-chevron-right text-xs text-gray-300"></i>
                <a href="/orders" class="text-text-secondary hover:text-accent transition-colors font-medium">Orders</a>
                <i class="fas fa-chevron-right text-xs text-gray-300"></i>
                <span class="text-primary font-semibold">Invoice</span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 invoice-wrapper">
        <!-- Invoice Header -->
        <div class="text-center mb-12 animate-fade-in">
            <h1 class="text-4xl md:text-5xl font-playfair font-bold text-primary mb-4">Invoice</h1>
            <p class="text-text-secondary text-lg max-w-2xl mx-auto">
                Order <span class="font-semibold text-accent">#ORD-<%= order.orderId.slice(1,8) || 'N/A' %></span>
                <br>
                Issued on <span class="font-semibold">
                    <%= new Date(order.invoiceDate).toLocaleDateString('en-IN', { year: 'numeric' , month: 'long' ,
                        day: 'numeric' }) %>
                </span>
            </p>
        </div>

        <!-- Invoice Details -->
        <div class="glass-effect rounded-3xl p-8 premium-shadow animate-slide-up">
            <!-- Company and Customer Info -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 ">
                <div>
                    <h2 class="text-xl font-playfair font-bold text-primary mb-4">From</h2>
                    <p class="text-sm text-text-secondary">
                        Eon Forge<br>
                        123 Luxury Lane, Mumbai<br>
                        Maharashtra, India 400001<br>
                        Email: support@eonforge.com<br>
                        Phone: +1 (800) 555-1234
                    </p>
                </div>
                <div>
                    <h2 class="text-xl font-playfair font-bold text-primary mb-4">To</h2>
                    <p class="text-sm text-text-secondary">
                        <%= userFullName || 'Customer' %><br>
                            <%= order.address?.street || 'N/A' %><br>
                                <%= order.address?.city || '' %>, <%= order.address?.state || '' %>
                                        <%= order.address?.pin || '' %><br>
                                            <%= order.address?.country || 'India' %><br>
                                                Phone: <%= order.address?.phone || 'Not provided' %>
                    </p>
                </div>
            </div>

            <!-- Order Items Table -->
            <div class="mb-8">
                <h2 class="text-xl font-playfair font-bold text-primary mb-4 flex items-center">
                    <i class="fas fa-box text-accent mr-2"></i>
                    Order Details
                </h2>
                <table class="invoice-table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Discount</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (order.orderItems || []).forEach((item, index)=> { %>
                            <tr class="animate-slide-up" style="animation-delay: <%= index * 0.1 %>s">
                                <td>
                                    <p class="font-medium text-text-primary">
                                        <%= item.product.productName || 'Product' %>
                                    </p>
                                    
                               
                                    <p class="text-xs text-text-secondary">
                                        <%= item.brandName || 'Eon Forge' %>
                                    </p>
                                    <% if (item.color) { %>
                                        <p class="text-xs text-text-secondary">Color: <%= item.color %>
                                        </p>
                                        <% } %>
                                </td>
                                <td>
                                    <%= item.stock || 1 %>
                                </td>
                                <td>₹<%= (item.regularPrice || 0).toLocaleString() %>
                                </td>
                                <td class="text-green-600">
                                    <%= item.discount> 0 ? '-₹'+(item.discount).toLocaleString() : '–' %>
                                </td>
                                <td>₹<%= (item.price  * (item.stock || 1)).toLocaleString() %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Order Summary -->
            <div class="border-t border-gray-100 pt-6">
                <h2 class="text-xl font-playfair font-bold text-primary mb-4 flex items-center">
                    <i class="fas fa-receipt text-accent mr-2"></i>
                    Order Summary
                </h2>
                <div class="space-y-3 max-w-sm ml-auto">
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Subtotal (<%= (order.orderItems || []).length %>
                                <%= (order.orderItems || []).length===1 ? 'item' : 'items' %>)</span>
                        <span class="font-semibold text-primary">₹<%= (order.totalPrice || 0).toLocaleString() %></span>
                    </div>
                    <% if (order.couponApplied && order.couponDiscount> 0) { %>
                        <div class="flex justify-between text-sm text-green-600">
                            <span class="text-text-secondary">Coupon Discount</span>
                            <span class="font-semibold">-₹<%= (order.couponDiscount).toLocaleString() %></span>
                        </div>
                        <% } %>
                            <div class="flex justify-between text-sm">
                                <span class="text-text-secondary">Delivery Fee</span>
                                <span class="font-semibold text-primary">
                                    <%= deliveryFee===0 ? 'Free' : '₹' + (deliveryFee || 0).toLocaleString() %>
                                </span>
                            </div>
                            <% if (order.paymentMethod==='cod' ) { %>
                                <div class="flex justify-between text-sm">
                                    <span class="text-text-secondary">COD Fee</span>
                                    <span class="font-semibold text-primary">₹50</span>
                                </div>
                                <% } %>
                                    <div class="flex justify-between text-lg font-bold pt-4 border-t border-gray-100">
                                        <span class="text-primary">Total</span>
                                        <span class="text-primary">₹<%= (order.finalAmount || 0).toLocaleString() %>
                                                </span>
                                    </div>
                </div>
            </div>

            <!-- Payment Method -->
            <div class="mt-8">
                <h2 class="text-xl font-playfair font-bold text-primary mb-4 flex items-center">
                    <i class="fas fa-credit-card text-accent mr-2"></i>
                    Payment Details
                </h2>
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas <%= order.paymentMethod === 'cod' ? 'fa-money-bill-wave text-green-600' : 
                                      order.paymentMethod === 'upi' ? 'fa-mobile-alt text-blue-600' : 
                                      order.paymentMethod === 'netbanking' ? 'fa-university text-teal-600' : 
                                      'fa-credit-card text-purple-600' %> text-lg"></i>
                    </div>
                    <div>
                        <p class="text-primary font-semibold">
                            <%= order.paymentMethod==='cod' ? 'Cash on Delivery' : order.paymentMethod==='upi'
                                ? 'UPI Payment' : order.paymentMethod==='netbanking' ? 'Net Banking' : 'Card Payment' %>
                        </p>
                        <p class="text-sm text-text-secondary">
                            Status: <span
                                class="font-semibold <%= order.paymentStatus === 'paid' ? 'text-green-600' : 'text-yellow-600' %>">
                                <%= order.paymentStatus.charAt(0).toUpperCase() + order.paymentStatus.slice(1) %>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div
            class="mt-12 flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4 animate-slide-up no-print">

            <a href="/download-invoice?orderId=<%= order.orderId %>" class="btn-primary">
                <i class="fas fa-file-pdf"></i> Download PDF
            </a>

            <a href="/order-details?orderId=<%= order.orderId || '' %>" class="btn-primary">
                <i class="fas fa-receipt"></i> View Order Details
            </a>
            <a href="/shop" class="btn-secondary">
                <i class="fas fa-shopping-bag"></i> Continue Shopping
            </a>
        </div>

        <!-- Empty Order State -->
        <div id="emptyOrder" class="text-center py-12 hidden animate-fade-in">
            <div class="max-w-md mx-auto">
                <div class="w-24 h-24 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-file-invoice text-3xl text-accent"></i>
                </div>
                <h2 class="text-2xl font-playfair font-bold text-primary mb-4">No Invoice Found</h2>
                <p class="text-base text-text-secondary mb-6">It seems there was an issue with your order. Explore our
                    collection to start shopping.</p>
                <a href="/products" class="btn-primary">
                    <i class="fas fa-shopping-bag"></i> Explore Collection
                </a>
            </div>
        </div>
    </main>

    <script>
        // Data from controller
        const order = <% - JSON.stringify(order || {}) %>;
        const userFullName = '<%= userFullName || "Customer" %>';
        const deliveryFee = <%= deliveryFee || 0 %>;

        // Show Empty Order
        function showEmptyOrder() {
            document.querySelector('main > *:not(#emptyOrder)').forEach(el => el.classList.add('hidden'));
            document.getElementById('emptyOrder').classList.remove('hidden');
        }

        // Initialize on Page Load
        document.addEventListener('DOMContentLoaded', () => {
            if (!order.orderItems || order.orderItems.length === 0) {
                showEmptyOrder();
            }
        });
    </script>
</body>

</html>